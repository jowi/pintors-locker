@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/itmm/_itmmLayout.cshtml";
    var LabList = (ViewBag.LabList as IQueryable<itmm.Models.Laboratory>);
    var LabInfo = (ViewBag.LabInfo as IQueryable<itmm.Models.Laboratory>);
    var StaffList= (ViewBag.StaffList as IQueryable<itmm.Models.Laboratory_Staff>);
   
}


@if (ViewBag.LabInfo == null)
{
    @ViewBag.Message    
}
else
{ 
 
    <div id="accord">
        <div id="accordion">
            <h4>
                <a href="#">About</a></h4>
            <div>

           
                @foreach (var info in LabInfo)
                {
                        @info.LaboratoryDesc
                }
                
    
            </div>
            <!-- end form -->
            <h4>
                <a href="#">Staff</a></h4>
            <div>
                @foreach (var x in StaffList)
	{
        string c = x.FirstName + " " + x.LastName;
		 <span>@c</span><br/>
	}
            </div>
 @*           <h4>
                <a href="#">Equipments</a></h4>
            <div>
                3
            </div>*@
            <h4>
                <a href="#">Contact</a></h4>
            <div>
               @foreach (var info in LabInfo)
                {
                        @info.LaboratoryContact
                }
            </div>
                
        </div>
        <!--end accordion-->
    </div>
}
@section SideNav{
<ul>

    @foreach (var lab in LabList)
    {
        
        <li>
           @* @Html.ActionLink(lab.LaboratoryName, "Index", "Home", new { lab = lab.LaboratoryId}, null)*@
           <a href="javascript:ItmmLoad('@Url.Action("Index", "Home", new { lab = lab.LaboratoryId })')">@lab.LaboratoryName</a>
        </li>
    }
 
</ul>
}