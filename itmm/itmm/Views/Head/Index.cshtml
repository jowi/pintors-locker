@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/itmm/_itmmLayout.cshtml";
    var Notice = (ViewBag.Notice as IQueryable<itmm.Models.Notification>);
}

@ViewBag.Welcome


<div id="notices">
@if (Notice.Count() != 0)
{
    <div></div>
}
</div>
<script type="text/javascript">
    $(document).ready(function () {
        // $("#light").addClass("light").css("color", "#F7BE81");
        // $("#dtable").dataTable();
        var cnt = $("#notices > div").length;
        if (cnt != 0) {
            $.gritter.add({
               
                title: "Heads up!..(0_0)",
               
                text: "It seems that there is an event today,for more info please go the Notification Menu",
                
                sticky: true
            });
        }
    });
</script>
@section SideNav{
<ul>
    <li>@Html.ActionLink("Home", "Index", "Head",null, new { id = "light"})</li>
    <li>@Html.ActionLink("Staff", "Staff", "Head")</li>
    <li>@Html.ActionLink("Equipment", "Equipment", "Head")</li>
    <li>@Html.ActionLink("Notification", "Notification", "Head")</li>
</ul>
}



